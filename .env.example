# =============================================================================
# STORM-LOGOS ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# SECURITY WARNING: Never commit .env files with real credentials!
# =============================================================================

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# Required: At least one LLM API key

# Groq API (recommended - fast and cost-effective)
# Get your key at: https://console.groq.com/keys
GROQ_API_KEY=gsk_your_groq_api_key_here

# Anthropic API (Claude)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# Default model to use
# Options: groq:llama-3.3-70b-versatile, claude, mistral:7b (Ollama)
LLM_MODEL=groq:llama-3.3-70b-versatile

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=semantic
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# =============================================================================
# SECURITY
# =============================================================================

# JWT Secret - MUST be changed in production!
# Generate with: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
# Example: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# SERVICE PORTS
# =============================================================================

API_PORT=8000
THERAPIST_PORT=8001
SEMANTIC_PORT=8002
FRONTEND_PORT=3000

# =============================================================================
# ENVIRONMENT
# =============================================================================

# Options: development, staging, production
ENVIRONMENT=development

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
