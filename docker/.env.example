# =============================================================================
# STORM-LOGOS ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# =============================================================================

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# Required: At least one LLM API key

# Groq API (recommended - fast and cost-effective)
GROQ_API_KEY=gsk_your_groq_api_key_here

# Anthropic API (Claude)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# Default model to use
# Options: groq:llama-3.3-70b-versatile, claude, mistral:7b (Ollama)
LLM_MODEL=groq:llama-3.3-70b-versatile

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=semantic
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Neo4j
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# =============================================================================
# SECURITY
# =============================================================================

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_here_generate_with_openssl_rand_hex_32

# =============================================================================
# SERVICE PORTS
# =============================================================================

API_PORT=8000
THERAPIST_PORT=8001
SEMANTIC_PORT=8002
FRONTEND_PORT=3000

# =============================================================================
# ENVIRONMENT
# =============================================================================

# Options: development, staging, production
ENVIRONMENT=development

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
